<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="match_parent"
    android:layout_gravity="center"
    xmlns:tools="http://schemas.android.com/tools"
    android:padding="@dimen/standard_margin"
    android:gravity="center"
    android:background="@android:color/white"
    android:orientation="vertical">
    <TextView
        android:id="@+id/tv_title_free_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/roboto_bold"
        android:textSize="15sp"
        android:textColor="@color/colorBlack"
        tools:text="Judul Text"/>
    <EditText
        android:id="@+id/ta_notes"
        android:layout_width="260dp"
        android:layout_marginTop="@dimen/et_top_margin"
        android:layout_height="wrap_content"
        android:background="@drawable/square_dash"
        android:gravity="top|left"
        android:inputType="textMultiLine"
        android:overScrollMode="always"
        android:scrollbarStyle="insideInset"
        android:scrollbars="vertical"
        android:lines="6"
        android:textColor="@color/colorBlack"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:scrollHorizontally="false" />
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="@dimen/et_top_margin">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

        </RelativeLayout>
        <TextView
            android:id="@+id/tv_cancel"
            style="@style/AlertDialog.AppCompat.Light"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/txt_action_cancel"
            android:textSize="14sp"
            android:padding="10dp"
            android:textStyle="bold"
            android:textColor="@color/main_red"/>

        <TextView
            android:id="@+id/tv_sure"
            style="@style/AlertDialog.AppCompat.Light"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/txt_action_sure"
            android:textSize="14sp"
            android:padding="10dp"
            android:textStyle="bold"
            android:textColor="@color/main_green" />
    </LinearLayout>
</LinearLayout>