<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="match_parent"
    android:layout_gravity="center"
    xmlns:tools="http://schemas.android.com/tools"
    android:padding="@dimen/standard_margin"
    android:gravity="center"
    android:background="@android:color/white"
    android:orientation="vertical">
    <TextView
        android:id="@+id/tv_title_free_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/roboto_bold"
        android:textSize="15sp"
        android:textColor="@color/colorBlack"
        tools:text="Judul Text"/>
    <LinearLayout
        android:layout_width="260dp"
        android:gravity="center"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/tv_text"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:textSize="12sp"
            android:fontFamily="@font/roboto_regular"
            android:textColor="@color/text_grey"
            android:gravity="center_vertical"
            tools:text="Jumlah Yang di pesan"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:textSize="12sp"
            android:fontFamily="@font/roboto_regular"
            android:textColor="@color/text_grey"
            android:gravity="center_vertical"
            android:text="@string/txt_two_point"/>
        <EditText
            android:id="@+id/et_qty"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="numberSigned"
            android:gravity="center_horizontal"
            android:textColor="@color/text_grey"
            android:importantForAutofill="no"
            android:textSize="12sp"
            android:focusable="true"
            tools:ignore="LabelFor"
            tools:text="200"/>
        <TextView
            android:id="@+id/tv_unit_name"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:textSize="12sp"
            android:fontFamily="@font/roboto_regular"
            android:textColor="@color/text_grey"
            android:gravity="center_vertical"
            android:text="@string/txt_two_point"
            tools:text="Sak"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="260dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_marginTop="@dimen/et_top_margin">
        <TextView
            android:id="@+id/tv_cancel"
            style="@style/AlertDialog.AppCompat.Light"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/txt_action_cancel"
            android:textSize="14sp"
            android:padding="10dp"
            android:textStyle="bold"
            android:textColor="@color/main_red"/>
        <View
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:background="#6767" />
        <TextView
            android:id="@+id/tv_sure"
            style="@style/AlertDialog.AppCompat.Light"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/txt_action_sure"
            android:textSize="14sp"
            android:padding="10dp"
            android:textStyle="bold"
            android:layout_marginEnd="20dp"
            android:textColor="@color/main_green"
            android:layout_marginRight="20dp" />
    </LinearLayout>
</LinearLayout>