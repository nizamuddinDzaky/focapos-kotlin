<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_height="wrap_content"
    android:layout_marginBottom="@dimen/et_top_margin"
    android:background="@android:color/white">

        <LinearLayout
            android:id="@+id/expand_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <RelativeLayout
                android:id="@+id/layout_alias"
                android:layout_width="74dp"
                android:layout_height="74dp"
                android:layout_margin="@dimen/et_top_margin">
                <View
                    android:layout_width="64dp"
                    android:layout_height="64dp"
                    android:layout_margin="@dimen/margin_6"
                    android:background="@drawable/bg_avatar_customer_pg" />
                <TextView
                    android:id="@+id/tv_alias_product"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:textColor="@android:color/white"
                    android:text="AR"/>
            </RelativeLayout>
            <RelativeLayout
                android:id="@+id/layout_thumb"
                android:layout_width="74dp"
                android:layout_height="74dp"
                android:visibility="gone"
                android:layout_margin="@dimen/et_top_margin">
                <ImageView
                    android:id="@+id/iv_icon_product"
                    android:layout_width="64dp"
                    android:layout_height="64dp"
                    android:layout_centerInParent="true"
                    android:src="@drawable/toko2"
                    />
            </RelativeLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:paddingTop="@dimen/standard_margin"
                android:paddingRight="@dimen/standard_margin"
                android:paddingBottom="@dimen/standard_margin"
                android:paddingEnd="@dimen/standard_margin"
                tools:ignore="RtlSymmetry">
                <TextView
                    android:id="@+id/tv_product_name"
                    style="@style/TextAppearance.AppCompat.Medium"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/roboto_regular"
                    android:textColor="@color/colorBlack"
                    tools:ignore="NestedWeights,RtlSymmetry"
                    tools:text = "Dynamix serbaguna 40 kg"/>

                <TextView
                    android:id="@+id/tv_product_price"
                    android:layout_marginTop="@dimen/et_top_margin"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:fontFamily="@font/roboto_regular"
                    android:textColor="@color/text_grey"
                    tools:text = "Rp 50.000"/>
            </LinearLayout>
        </LinearLayout>
</LinearLayout>