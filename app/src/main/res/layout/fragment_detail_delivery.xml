            android:background="#FFFFFF"
            android:orientation="vertical"
            android:paddingTop="@dimen/et_top_margin"
            android:paddingBottom="@dimen/et_top_margin">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
