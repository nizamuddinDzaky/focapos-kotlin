                        android:contentDescription="@string/txt_image_store" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/margin_10"
                    android:layout_marginLeft="@dimen/margin_10"
                    android:layout_weight="2.4"
                    android:background="#FFFFFF"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/txt_from"
                        android:textColor="@color/colorBlack" />

                    <TextView
                        android:id="@+id/tv_detail_sbo_customer_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/colorBlack"
                        android:textStyle="bold"
                        tools:text="Helios Toko Jaya" />

                    <TextView
                        android:id="@+id/tv_detail_sbo_customer_address_1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        tools:text="Desa Sumberarum, Kec. Kerek, Kabupaten, Tuban " />

                    <TextView
                        android:id="@+id/tv_detail_sbo_customer_address_2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        tools:text="Jawa Timur" />

                </LinearLayout>

            </LinearLayout>

        </LinearLayout>

        <View
