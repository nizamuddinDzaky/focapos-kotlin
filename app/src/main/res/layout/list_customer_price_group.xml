<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">

    <RelativeLayout
        android:layout_width="74dp"
        android:layout_height="74dp"
        android:layout_margin="@dimen/et_top_margin">

        <View
            android:layout_width="64dp"
            android:layout_height="64dp"
            android:layout_margin="@dimen/margin_6"
            android:background="@drawable/bg_avatar_customer_pg" />

        <View
            android:id="@+id/view_mark_selected"
            android:layout_width="16dp"
            android:layout_height="16dp"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:background="@drawable/bg_mark_green_checked"
            android:visibility="gone" />

        <TextView
            android:id="@+id/tv_alias_customer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textColor="@android:color/white"
            tools:text="AR" />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:orientation="vertical"
        android:paddingStart="@dimen/et_top_margin"
        android:paddingEnd="@dimen/et_top_margin">

        <TextView
            android:id="@+id/tv_customer_price_group_item_1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:fontFamily="@font/roboto_regular"
            tools:text="Judul" />

        <TextView
            android:id="@+id/tv_customer_price_group_item_2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/roboto_regular"
            android:textAppearance="?android:attr/textAppearanceSmall"
            tools:text="Sub Judul" />
    </LinearLayout>
</LinearLayout>