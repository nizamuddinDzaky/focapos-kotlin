<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context=".view.ui.sales.AddProductSalesActivity"
    tools:showIn="@layout/activity_add_product_sales">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.7"
                android:orientation="vertical">

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/tv_search_product_add_sales"
                        android:layout_width="match_parent"
                        android:layout_height="48dp"
                        android:background="@drawable/my_button_bg"
                        android:gravity="center_vertical"
                        android:layout_marginStart="@dimen/margin_20"
                        android:layout_marginLeft="@dimen/margin_20"
                        android:text="@string/txt_search_product" />

                    <androidx.appcompat.widget.SearchView
                        android:id="@+id/sv_search_product_add_sales"
                        android:layout_width="match_parent"
                        android:layout_height="48dp"
                        android:background="@drawable/my_button_bg"
                        android:visibility="gone" />
                </RelativeLayout>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_search_product_add_sales"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.2"
                android:orientation="vertical">

                <ImageButton
                    android:id="@+id/btn_search_product_add_sales"
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:background="@drawable/my_button_bg"
                    android:src="@drawable/plus_icon_foreground"
                    android:contentDescription="@string/txt_image_search_product" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.2"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.5"
                android:orientation="vertical">

                <ImageButton
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:background="@drawable/my_button_bg"
                    android:src="@drawable/plus_icon_foreground" />

            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rv_list_product_add_sale"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
</LinearLayout>