<?xml version="1.0" encoding="utf-8"?>
    <androidx.cardview.widget.CardView
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/card_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:foreground="?selectableItemBackground"
        android:layout_marginBottom="@dimen/et_top_margin"
        app:cardCornerRadius="4dp">

        <LinearLayout
            android:id="@+id/expand_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <RelativeLayout
                android:layout_width="74dp"
                android:layout_height="74dp"
                android:layout_margin="@dimen/et_top_margin">
                <ImageView
                    android:layout_width="64dp"
                    android:layout_height="64dp"
                    android:layout_centerInParent="true"
                    android:src="@drawable/toko2"
                    />
            </RelativeLayout>
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:paddingTop="@dimen/et_top_margin"
                android:paddingRight="@dimen/standard_margin"
                android:paddingBottom="@dimen/standard_margin"
                android:paddingEnd="@dimen/standard_margin"
                tools:ignore="RtlSymmetry">
                <TextView
                    android:id="@+id/tv_master_data_name"
                    style="@style/TextAppearance.AppCompat.Medium"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/roboto_regular"
                    android:textColor="@color/colorBlack"
                    tools:ignore="NestedWeights,RtlSymmetry"
                    tools:text = "Dynamix serbaguna 40 kg"/>
                <TextView
                    android:id="@+id/tv_master_data_description2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/roboto_regular"
                    android:textColor="@color/text_grey"
                    tools:text = "Rp 50.000"/>
                <TextView
                    android:id="@+id/tv_master_data_description"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/roboto_regular"
                    android:textColor="@color/text_grey"
                    tools:text = "Rp 50.000"/>
            </LinearLayout>
            <ImageView
                android:id="@+id/btn_menu_more"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/et_top_margin"
                android:layout_weight="0"
                android:contentDescription="@string/conDes"
                android:src="@drawable/ic_more_vert_black_24dp"
                android:visibility="gone"/>
        </LinearLayout>
    </androidx.cardview.widget.CardView>