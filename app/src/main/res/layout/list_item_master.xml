<?xml version="1.0" encoding="utf-8"?>
<TwoLineListItem xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:minHeight="?attr/listPreferredItemHeight"
    android:mode="twoLine"
    android:paddingLeft="?attr/listPreferredItemPaddingStart"
    android:paddingRight="?attr/listPreferredItemPaddingEnd"
    android:paddingStart="?attr/listPreferredItemPaddingStart"
    android:paddingEnd="?attr/listPreferredItemPaddingEnd">

    <TextView android:id="@+id/tv_master_data_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:textAppearance="?attr/textAppearanceListItem" />

    <TextView android:id="@+id/tv_master_data_description"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_master_data_name"
        android:layout_alignStart="@+id/tv_master_data_name"
        android:layout_alignLeft="@+id/tv_master_data_name"
        android:textAppearance="?attr/textAppearanceListItemSecondary" />

</TwoLineListItem>