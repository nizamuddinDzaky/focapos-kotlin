<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:layout_marginBottom="@dimen/et_top_margin">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="@dimen/et_top_margin">

            <RelativeLayout
                android:layout_width="62dp"
                android:layout_height="74dp">
                <View
                    android:layout_width="64dp"
                    android:layout_height="64dp"
                    android:layout_marginTop="@dimen/margin_6"
                    android:background="@drawable/bg_avatar_customer_pg" />
                <TextView
                    android:id="@+id/tv_alias_product"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:textColor="@android:color/white"
                    android:text="AR"/>
            </RelativeLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginLeft="@dimen/et_top_margin"
                android:layout_marginStart="@dimen/et_top_margin">

                <TextView
                    android:id="@+id/tv_product_name_add_sale"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/margin_6"
                    android:gravity="center_vertical"
                    android:textAllCaps="true"
                    android:textColor="#B20838"
                    android:textSize="12sp"
                    android:fontFamily="@font/roboto_bold"
                    tools:text="Dynamix Serbaguna 40KG" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:baselineAligned="false"
                    android:layout_marginTop="@dimen/et_top_margin"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center_vertical"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="center_vertical"
                            android:text="@string/txt_price"
                            android:textColor="#666666"
                            android:textSize="12sp"
                            android:fontFamily="@font/roboto_regular"/>

                        <TextView
                            android:id="@+id/tv_product_price_add_sale"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="center_vertical"
                            android:textColor="#666666"
                            android:textSize="12sp"
                            android:fontFamily="@font/roboto_bold"
                            tools:text="200 SAK" />

                    </LinearLayout>

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:gravity="center"
                            android:layout_weight="1"
                            android:orientation="horizontal">
                            <ImageView
                                android:id="@+id/iv_remove_product_add_sale"
                                android:layout_width="20dp"
                                android:layout_height="20dp"
                                android:contentDescription="@string/txt_image_minus"
                                android:src="@drawable/minus" />

                            <TextView
                                android:id="@+id/et_qty_produk_add_sale"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="@dimen/et_top_margin"
                                android:layout_marginLeft="@dimen/et_top_margin"
                                android:layout_marginEnd="@dimen/et_top_margin"
                                android:layout_marginRight="@dimen/et_top_margin"
                                android:background="@drawable/bottom_line"
                                android:fontFamily="@font/roboto_regular"
                                android:gravity="center_horizontal"
                                android:textColor="#666666"
                                android:textSize="15sp"
                                tools:text="200" />
                            <ImageView
                                android:id="@+id/iv_add_product_add_sale"
                                android:layout_width="20dp"
                                android:layout_height="20dp"
                                android:contentDescription="@string/txt_image_plus"
                                android:src="@drawable/plus" />

                        </LinearLayout>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/colorLine" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:padding="@dimen/et_top_margin">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:layout_marginRight="@dimen/et_top_margin">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/txt_sub_total"
                    android:fontFamily="@font/roboto_regular"/>

                <TextView
                    android:id="@+id/tv_subtoal_add_sale"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/roboto_bold"
                    tools:text="@string/txt_hint_example_sales_number" />
            </LinearLayout>

            <TextView
                android:id="@+id/tv_edit_product_add_sale"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:fontFamily="@font/roboto_regular"
                android:text="@string/txt_edit"
                android:textColor="@color/colorPrimary" />
        </LinearLayout>
    </LinearLayout>
</androidx.cardview.widget.CardView>