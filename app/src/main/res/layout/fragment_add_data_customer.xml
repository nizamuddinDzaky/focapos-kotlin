                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/txt_customer_cf4"
                    android:textColor="#676767"
                    android:fontFamily="@font/roboto_bold" />
                <EditText
                    android:id="@+id/et_cf4_add_customer"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:importantForAutofill="no"
                    android:inputType="text"
                    tools:ignore="LabelFor" />-->

                <!--<TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/txt_customer_cf5"
                    android:textColor="#676767"
                    android:fontFamily="@font/roboto_bold" />
                <EditText
                    android:id="@+id/et_cf5_add_customer"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:importantForAutofill="no"
                    android:inputType="text"
                    tools:ignore="LabelFor" />-->

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/txt_status"
                    android:textColor="#676767"
                    android:fontFamily="@font/roboto_bold" />
                <RadioGroup
                    android:id="@+id/rg_status_add_customer"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <RadioButton
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:buttonTint="#B20838"
                        android:text="@string/txt_inactive"
                        tools:targetApi="lollipop" />
                    <RadioButton
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:buttonTint="#B20838"
                        android:text="@string/txt_active"
                        tools:targetApi="lollipop" />
                </RadioGroup>
            </LinearLayout>
            <Button
                android:id="@+id/btn_confirmation_add_customer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#1CA865"
                android:text="@string/txt_add"
                android:textAllCaps="true"
                android:textAppearance="@style/TextAppearance.AppCompat.Large"
                android:textColor="@android:color/white"/>
        </LinearLayout>
    </ScrollView>


</FrameLayout>