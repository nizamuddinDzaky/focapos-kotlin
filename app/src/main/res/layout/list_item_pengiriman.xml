<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@android:color/white"
    android:layout_marginBottom="@dimen/margin_10">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:baselineAligned="false"
        android:padding="@dimen/et_top_margin">
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.2"
            android:gravity="center_vertical">
            <RelativeLayout
                android:layout_width="74dp"
                android:layout_height="74dp"
                tools:ignore="UselessParent">
                <View
                    android:layout_width="64dp"
                    android:layout_height="64dp"
                    android:layout_margin="@dimen/margin_6"
                    android:background="@drawable/bg_avatar_transaksi" />
                <TextView
                    android:id="@+id/tv_alias_product"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:textColor="@android:color/white"
                    android:text="Deliv"/>
            </RelativeLayout>
        </LinearLayout>
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.7"
            android:layout_marginTop="@dimen/margin_6"
            android:layout_marginLeft="@dimen/margin_10"
            android:orientation="vertical"
            android:layout_marginStart="@dimen/margin_10">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:baselineAligned="false">
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/txt_do_number"
                        android:textColor="@color/text_grey"
                        android:fontFamily="@font/roboto_bold"
                        android:textSize="13sp"
                        tools:targetApi="jelly_bean" />
                    <TextView
                        android:id="@+id/tv_delivery_delivery_order_number"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/text_grey"
                        android:fontFamily="@font/roboto_regular"
                        android:textSize="13sp"
                        tools:text="0216516545645646"
                        tools:targetApi="jelly_bean" />
                </LinearLayout>
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/txt_so_number"
                        android:textColor="@color/text_grey"
                        android:fontFamily="@font/roboto_bold"
                        android:textSize="13sp"
                        tools:targetApi="jelly_bean" />
                    <TextView
                        android:id="@+id/tv_delivery_sales_order_number"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/text_grey"
                        android:fontFamily="@font/roboto_regular"
                        android:textSize="13sp"
                        tools:text="0216516545645646"
                        tools:targetApi="jelly_bean" />
                </LinearLayout>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="@dimen/et_top_margin"
                android:baselineAligned="false">
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/txt_status"
                        android:textColor="@color/text_grey"
                        android:fontFamily="@font/roboto_bold"
                        android:textSize="13sp"
                        tools:targetApi="jelly_bean" />
                    <TextView
                        android:id="@+id/tv_status_deliv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/text_grey"
                        android:fontFamily="@font/roboto_regular"
                        android:textSize="13sp"
                        tools:text="0216516545645646"
                        tools:targetApi="jelly_bean" />
                </LinearLayout>
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/txt_driver_name"
                        android:textColor="@color/text_grey"
                        android:fontFamily="@font/roboto_bold"
                        android:textSize="13sp"
                        tools:targetApi="jelly_bean" />
                    <TextView
                        android:id="@+id/tv_delivery_driver_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/text_grey"
                        android:fontFamily="@font/roboto_regular"
                        android:textSize="13sp"
                        tools:text="0216516545645646"
                        tools:targetApi="jelly_bean" />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
        <ImageView
            android:id="@+id/btn_menu_more"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="0"
            android:layout_marginTop="@dimen/margin_6"
            android:contentDescription="@string/conDes"
            android:src="@drawable/ic_more_vert_black_24dp"
            tools:visibility="visible" />
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/colorLine" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/et_top_margin"
        android:layout_marginLeft="@dimen/margin_6"
        android:layout_marginRight="@dimen/margin_6">
        <TextView
            android:id="@+id/tv_delivery_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="14/10/2020" />
        <TextView
            android:id="@+id/tv_attachment"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/txt_see_attachment"
            android:gravity="right"
            android:textSize="13sp"
            android:textColor="@color/main_blue"
            android:fontFamily="@font/roboto_bold"
            tools:targetApi="jelly_bean" />

    </LinearLayout>
</LinearLayout>