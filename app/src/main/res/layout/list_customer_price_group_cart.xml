<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="90dp"
    android:layout_height="106dp"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="74dp"
        android:layout_height="74dp"
        android:layout_marginStart="@dimen/et_top_margin"
        android:layout_marginTop="@dimen/et_top_margin"
        android:layout_marginEnd="@dimen/et_top_margin">

        <View
            android:layout_width="64dp"
            android:layout_height="64dp"
            android:layout_margin="@dimen/margin_6"
            android:background="@drawable/bg_avatar_customer_pg" />

        <View
            android:layout_width="16dp"
            android:layout_height="16dp"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:background="@drawable/bg_mark_red_remove" />

        <TextView
            android:id="@+id/tv_alias_customer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textColor="@android:color/white"
            android:fontFamily="@font/roboto_regular"
            tools:text="AR" />
    </RelativeLayout>

    <TextView
        android:id="@+id/tv_list_customer_cart_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/et_top_margin"
        android:gravity="center"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:fontFamily="@font/roboto_regular"
        tools:text="Judul" />
</LinearLayout>